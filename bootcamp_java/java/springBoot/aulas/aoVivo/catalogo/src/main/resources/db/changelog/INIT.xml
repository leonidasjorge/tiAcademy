<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.12.xsd">
    
    <!-- "changeSet" é o bloco de código que será executado; -->
    <changeSet id="1" author="leonidas">
    	<preConditions onFail="MARK_RAN" onFailMessage="a tabela artista já existe">
    		<not>
    			<tableExists tableName="artista"/>
    		</not>
    	</preConditions>
    	
    	<createTable tableName="artista">
    		<column name="id" type="INT">
    			<constraints nullable="false" primaryKey="true" primaryKeyName="pk_artista"/>
    		</column>
    		<column name="nome" type="VARCHAR(255)">
    			<constraints nullable="false"/>
    		</column>
    	</createTable>
    </changeSet>
    
        <changeSet id="2" author="leonidas">
    	<preConditions onFail="MARK_RAN" onFailMessage="a tabela gravadora já existe">
    		<not>
    			<tableExists tableName="gravadora"/>
    		</not>
    	</preConditions>
    	
    	<createTable tableName="gravadora">
    		<column name="id" type="INT">
    			<constraints nullable="false"
    						primaryKey="true"
    						primaryKeyName="pk_gravadora"/>
    		</column>
    		
    		<column name="nome" type="VARCHAR(255)">
    			<constraints nullable="false"/>
    		</column>
    		
    		<column name="ano" type="INT"/>
    		
    		<column name="cidade" type="VARCHAR(255)"/>
    		
    		<column name="uf" type="VARCHAR(255)"/>
    	</createTable>
    </changeSet>
</databaseChangeLog>